    <script>
        function scrollCategories(direction) {
            const wrapper = document.getElementById('categoriesWrapper');
            const scrollAmount = 150 * direction;
    
            wrapper.scrollBy({
                left: scrollAmount,
                behavior: 'smooth' // Smooth scrolling effect
            });
    
            setTimeout(updateButtons, 300); // Delay to update button state after scroll
        }
    
        function updateButtons() {
            const wrapper = document.getElementById('categoriesWrapper');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
    
            if (wrapper.scrollLeft <= 0) {
                prevBtn.classList.remove("active");
                prevBtn.classList.add("disabled");
            } else {
                prevBtn.classList.remove("disabled");
                prevBtn.classList.add("active");
            }
    
            if (wrapper.scrollLeft + wrapper.clientWidth >= wrapper.scrollWidth) {
                nextBtn.classList.remove("active");
                nextBtn.classList.add("disabled");
            } else {
                nextBtn.classList.remove("disabled");
                nextBtn.classList.add("active");
            }
        }
    
        // Ensure correct button state on page load
        window.onload = updateButtons;
    </script>
    
    <script>
        // Theme toggling functionality
        const themeToggle = document.getElementById('theme-toggle');
        const modeIcon = document.getElementById('mode-icon');
        
        // Check for saved theme preference or use default
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);
        themeToggle.checked = savedTheme === 'dark';
        modeIcon.className = savedTheme === 'dark' ? 'fas fa-moon' : 'fas fa-sun';
        
        // Theme switch event listener
        themeToggle.addEventListener('change', function() {
            if(this.checked) {
                document.documentElement.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
                modeIcon.className = 'fas fa-moon';
            } else {
                document.documentElement.setAttribute('data-theme', 'light');
                localStorage.setItem('theme', 'light');
                modeIcon.className = 'fas fa-sun';
            }
        });
        
        // Smooth scrolling back to top
        const backToTopButton = document.querySelector(".back-to-top");
    
        backToTopButton.addEventListener("click", function (e) {
            e.preventDefault();
            window.scrollTo({
                top: 0,
                behavior: "smooth"
            });
        });

        function showSwal(type, title, text, timer = 1500) {
            return Swal.fire({
                icon: type,
                title,
                text,
                showConfirmButton: false,
                timer,
                timerProgressBar: true
            });
        }
        
    </script>
