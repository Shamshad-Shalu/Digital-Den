<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DIGITAL DEN - E-commerce Website</title>
    <!-- style  -->
    <link rel="stylesheet" href="/partials/user/styles/user.css">
    <!-- boostrap  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />  
</head>

<body>
    <header>
        <!-- Top Bar -->
        <div class="top-bar">
            <div class="container ">
                <div class="row">
                    <div class="col-md-6">
                        <!-- <span><i class="fa fa-mobile-phone"></i> Contact: 123-456-789</span> -->
                        <span class="ms-3"><i class="fa fa-envelope"></i> test@example.com</span>
                        <!-- Dark Mode Toggle Switch -->
                        <label class="theme-switch ms-3">
                            <input type="checkbox" id="theme-toggle">
                            <span class="slider"></span>
                        </label>
                        <span class="mode-icon ms-2">
                            <i id="mode-icon" class="fas fa-sun"></i>
                        </span>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="d-flex align-items-center justify-content-end">
                            <a href="#" class="my-account">
                                <span><i class="fa fa-user"></i> My Account</span>
                            </a>
                            <% if(locals.isLoggedIn){ %>
                                <a href="/user/logout" class="auth-btn logout-btn">
                                    Logout
                                </a>
                            <% } else { %>
                                <a href="/user/signin" class="auth-btn login-btn" >
                                    Login
                                </a>
                            <% } %>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Search Row -->
        <div class="search-row">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 d-flex justify-content-between p-4">
                        <div class="sidebar-header">
                            <i class="fas fa-laptop-code"></i>
                            <h1 class="logo">DIGITAL DEN</h1>
                        </div>
                        <div class="d-flex align-items-center search-bar-container ">
                            <form action="/user/products" method="GET" class="d-flex">
                                <input type="text" class="form-control" name="search" placeholder="Search Products Here..." 
                                 value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                                <button class="btn search-btn" type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                        <div class="menu-bar-icons d-flex align-items-center ">
                            <div class="cart-container position-relative">
                                <i class="fa-solid fa-heart cart-icon"></i>
                                <span
                                    class="notification position-absolute top-0 start-100 translate-middle badge rounded-pill d-flex justify-content-center">
                                    2
                                </span>
                            </div>
                            <div class="cart-container position-relative">
                                <i class="fa fa-shopping-cart cart-icon"></i>
                                <span
                                    class="notification position-absolute top-0 start-100 translate-middle badge rounded-pill d-flex justify-content-center">
                                    0
                                </span>
                            </div>
                            <div class="cart-container position-relative">
                                <i class="fa-sharp fa-solid fa-truck-fast cart-icon"></i>
                                <span
                                    class="notification position-absolute top-0 start-100 translate-middle badge rounded-pill d-flex justify-content-center">
                                    7
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg bottom-shadow">
            <div class="container">
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/user/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/cart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/wishlist">Wishlist</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/aboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/contactUs">Contact Us</a>
                        </li>
                    </ul>

                </div>
                <div class="shop-online-text d-none d-lg-block">
                    Shop your online from Digital Den
                </div>

            </div>
        </nav>
    </header>
 