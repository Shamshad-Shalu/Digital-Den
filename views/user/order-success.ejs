<%- include('../partial/user/header') %>

    <style>
        :root {
            --bg-color: #ffffff;
            --text-color: #333333;
            --header-bg: #ffffff;
            --card-bg: #ffffff;
            --border-color: #dee2e6;
            --accent-color: #007bff;
            --sale-color: #007bff;
            --shadow-color: rgba(0,0,0,0.1);
            --muted-text: #6c757d;
            --input-bg: #ffffff;
            --input-text: #333333;
            --input-placeholder: #6c757d;
            --success-color: #28a745;
            --hover-bg: rgba(0,0,0,0.03);
        }

        [data-theme="dark"] {
            --bg-color: #121212;
            --text-color: #e0e0e0;
            --header-bg: #1e1e1e;
            --card-bg: #2a2a2a;
            --border-color: #3a3a3a;
            --accent-color: #4BB6E8;
            --sale-color: #4BB6E8;
            --shadow-color: rgba(0,0,0,0.3);
            --muted-text: #a7a3a3;
            --input-bg: #3a3a3a;
            --input-text: #e0e0e0;
            --input-placeholder: #a7a3a3;
            --success-color: #2ecc71;
            --hover-bg: rgba(255,255,255,0.05);
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            transition: all 0.3s ease;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        /* Text elements - explicitly set text color for all */
        p, span, h1, h2, h3, h4, h5, h6, div, small {
            color: var(--text-color);
            transition: color 0.3s ease;
        }

        /* Muted text elements */
        .text-muted, p.text-muted, span.text-muted, div.text-muted, small.text-muted {
            color: var(--muted-text) !important;
            transition: color 0.3s ease;
        }

        .success-container {
            background-color: var(--card-bg);
            border: 0.5px solid var(--border-color);
            border-radius: 10px;
            padding: 30px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px var(--shadow-color);
        }

        .btn-primary {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-outline {
            color: var(--text-color);
            border: 1px solid var(--border-color);
            background-color: transparent;
        }

        .btn-outline:hover {
            background-color: var(--border-color);
            color: var(--text-color);
        }

        .success-icon {
            color: var(--success-color);
            font-size: 80px;
            margin-bottom: 20px;
        }

        .success-animation {
            animation: success-bounce 1s ease;
        }

        @keyframes success-bounce {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); }
        }

        .order-details {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 20px;
            margin-top: 30px;
        }

        .order-details h5 {
            color: var(--text-color);
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border-color);
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            font-size: 15px;
        }

        .detail-label {
            color: var(--muted-text);
        }

        .detail-value {
            font-weight: 500;
            color: var(--text-color);
        }

        .address-box {
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 15px;
            margin-top: 15px;
        }

        /* Address box specific styles to ensure text is visible */
        .address-box p {
            color: var(--text-color);
            transition: color 0.3s ease;
        }

        .address-box p.text-muted {
            color: var(--muted-text) !important;
            transition: color 0.3s ease;
        }

        .shipment-progress {
            margin-top: 40px;
            padding-bottom: 20px;
        }

        .progress-track {
            position: relative;
            margin: 0 auto;
            margin-top: 10px;
        }

        .progress-step {
            position: relative;
            text-align: center;
            z-index: 1;
        }

        .progress-step:before {
            content: "";
            display: block;
            width: 20px;
            height: 20px;
            background-color: var(--border-color);
            border-radius: 50%;
            margin: 0 auto 10px;
            transition: all 0.3s ease;
        }

        .progress-step:after {
            content: "";
            position: absolute;
            top: 10px;
            left: 50%;
            width: 100%;
            height: 2px;
            background-color: var(--border-color);
            z-index: -1;
            transition: all 0.3s ease;
        }

        .progress-step.active:before,
        .progress-step.active:after {
            background-color: var(--success-color);
        }

        .progress-step:last-child:after {
            display: none;
        }

        .progress-content {
            font-size: 13px;
            color: var(--muted-text);
            transition: all 0.3s ease;
        }

        .progress-step.active .progress-content {
            color: var(--text-color);
            font-weight: 600;
        }

        .animate-in {
            animation: fadeIn 0.8s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .btn-icon {
            margin-right: 8px;
        }

        .product-list .product-item {
            transition: all 0.2s ease;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 12px;
            border: 1px solid var(--border-color);
        }

        .product-list .product-item:hover {
            background-color: var(--hover-bg);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px var(--shadow-color);
        }

        .product-list img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            transition: transform 0.2s ease;
        }

        .product-list .product-item:hover img {
            transform: scale(1.05);
        }

        .order-summary {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px dashed var(--border-color);
        }

        /* Theme Toggle Button */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 999;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            color: var(--text-color);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 2px 5px var(--shadow-color);
            transition: all 0.3s ease;
        }

        .theme-toggle:hover {
            transform: scale(1.1);
        }

        /* Footer text fix */
        .footer-text p {
            color: var(--text-color);
        }

        .footer-text p.text-muted {
            color: var(--muted-text) !important;
        }

        .footer-text a {
            color: var(--accent-color) !important;
        }

        @media (max-width: 767px) {
            .success-container {
                padding: 20px 15px;
            }
            
            .btn-group-vertical .btn {
                margin-bottom: 10px;
            }

            .progress-content {
                font-size: 11px;
            }
        }

        /* Additional mobile improvements */
        @media (max-width: 576px) {
            .d-sm-flex {
                flex-direction: column;
                width: 100%;
            }

            .d-sm-flex .btn {
                margin-bottom: 10px;
                width: 100%;
            }
        }

        /* Estimated Delivery Section */
        .estimated-delivery {
            margin-top: 20px;
            background-color: var(--card-bg);
            border: 1px solid var(--accent-color);
            border-radius: 8px;
            padding: 15px;
            text-align: center;
        }

        .estimated-delivery .countdown {
            font-size: 18px;
            font-weight: 600;
            color: var(--accent-color);
            margin-top: 5px;
        }
        .address-box p {
            color: var(--muted-text) !important ;
        }
    </style>

    <div class="container py-5 animate-in">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="success-container text-center">
                    <!-- Success Icon -->
                    <div class="success-icon success-animation">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    
                    <!-- Success Message -->
                    <h2 class="mb-3 fw-bold">Order Placed Successfully!</h2>
                    <p class="mb-4" style="color: var(--text-color);">Thank you for your purchase. Your order has been received and is being processed.</p>
                    
                    <!-- Order ID and Date -->
                    <div class="order-details animate-in" style="animation-delay: 0.2s;">
                        <h5 class="fw-bold">Order Information</h5>
                        <div class="detail-row">
                            <span class="detail-label">Order Number:</span>
                            <span class="detail-value"># <%= order.orderId  %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Date:</span>
                            <span class="detail-value"><%= new Date(order.invoiceDate).toLocaleDateString() %></span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Payment Method:</span>
                            <span class="detail-value"> <%= order.paymentMethod === "COD"  ?  "Cash on Delivery" : order.paymentMethod %> </span>
                        </div>
                        <div class="detail-row">
                            <span class="detail-label">Total Amount:</span>
                            <span class="detail-value fw-bold" style="color: var(--accent-color);">₹ <%= order.finalAmount %></span>
                        </div>
                    </div>
                    
                    <!-- Shipping Details -->
                    <div class="order-details animate-in" style="animation-delay: 0.3s;">
                        <h5 class="fw-bold">Shipping Details</h5>
                        <div class="address-box">
                            <p class="fw-medium mb-1" ><%= order.address.name %> (<%= order.address.addressType %>)</p>
                            <p class="mb-1" ><%= order.address.addressLine %></p>
                            <p class="mb-1" ><%= order.address.city %>, <%= order.address.state %> <%= order.address.pincode %></p>
                            <p class="mb-0" >Phone: +91 <%= order.address.phone %></p>
                        </div>
                    </div>

                    <!-- Order Items -->
                    <div class="order-details animate-in" style="animation-delay: 0.4s;">
                        <h5 class="fw-bold">Order Items</h5>
                        <div class="product-list">
                            <% order.orderedItems.forEach(item => { %>
                                <div class="product-item d-flex align-items-center">
                                    <img src="/uploads/products/<%= item.product.cardImage %>" alt="<%= item.product.productName %>" class="me-3 rounded">
                                    <div class="flex-grow-1 text-start">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0 fw-semibold"><%= item.product.productName %></h6>
                                                <small style="color: var(--muted-text);">
                                                    Qty: <%= item.quantity %> @ ₹<%= item.price.toFixed(2) %>
                                                </small>
                                            </div>
                                            <span class="fw-medium">₹<%=(item.quantity * item.price).toFixed(2) %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        
                        <!-- Order Summary -->
                        <div class="order-summary">
                            <div class="detail-row">
                                <span class="detail-label">Subtotal:</span>
                                <span class="detail-value">₹<%= order.totalPrice %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Discount:</span>
                                <span class="detail-value"><%= order.discount %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Tax:</span>
                                <span class="detail-value"><%= order.tax%></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Shipping:</span>
                                <span class="detail-value"><%= order.shipping === 0  ?  "FREE" : order.shipping %></span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label fw-bold">Total:</span>
                                <span class="detail-value fw-bold" style="color: var(--accent-color);">₹<%= order.finalAmount %></span>
                            </div>
                        </div>
                    </div> 
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-center mt-4 animate-in" style="animation-delay: 0.6s;">
                        <div class="d-grid gap-3 d-sm-flex">
                            <a href="/orders" class="btn btn-primary px-4 py-2">
                                <i class="fas fa-shopping-bag btn-icon"></i>View Orders
                            </a>
                            <a href="/" class="btn btn-outline px-4 py-2">
                                <i class="fas fa-home btn-icon"></i>Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Additional Info -->
                <div class="text-center mt-4 animate-in footer-text" style="animation-delay: 0.7s;">
                    <p style="color: var(--text-color);">An email confirmation has been sent to your registered email address.</p>
                    <p class="mb-0" style="color: var(--text-color);">For any queries related to your order, please contact our <a href="/contactUs" style="color: var(--accent-color);">customer support</a>.</p>
                </div>
            </div>
        </div>
    </div>

<%- include('../partial/user/footer') %>