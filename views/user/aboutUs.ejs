        --nav-shadow: rgba(0, 0, 0, 0.1);
        --primary-color: #0d6efd;
        --accent-color: #e83e8c;
    }

    [data-theme="dark"] {
        --text-color: #e0e0e0;
        --header-bg: #1e1e1e;
        --card-bg: #2a2a2a;
        --text-muted: #adb5bd;
